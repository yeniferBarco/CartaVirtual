<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vintage_rojo"
    tools:context="com.example.asus.cartavirtual.Login">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_atras"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:background="@android:color/transparent"
                android:onClick="atras"
                app:srcCompat="@android:drawable/ic_menu_revert"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView47"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/button_home"
                android:layout_width="70dp"
                android:layout_height="46dp"
                android:layout_weight="0.21"
                android:background="@android:color/transparent"
                android:onClick="home"
                app:srcCompat="@drawable/home"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView32"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/textView56"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Por favor recuerde que el correo debe terminar en @apres.com"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView57"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.30"
                android:fontFamily="serif"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="italic"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/Text_correo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.30"
                android:ems="10"
                android:fontFamily="serif"
                android:hint="Correo"
                android:textColorHint="@android:color/white"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/white"
                android:textStyle="italic"
                tools:ignore="HardcodedText,LabelFor" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.62"
                android:fontFamily="serif"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="italic"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/Text_contrasena"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.91"
                android:ems="10"
                android:hint="ContraseÃ±a"
                android:inputType="textPassword"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:textStyle="italic"
                tools:ignore="HardcodedText,LabelFor" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.36"
                android:fontFamily="serif"
                android:textColor="@android:color/white"
                android:background="@android:color/transparent"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView54"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonIngresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="serif"
            android:onClick="lanzarIngreso"
            android:text="Ingresar"
            android:textColor="@android:color/white"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView53"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonRegistrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="serif"
            android:onClick="lanzarRegistro"
            android:text="Registrarse"
            android:textColor="@android:color/white"
            tools:ignore="HardcodedText" />

        <TextView android:id="@+id/login_error"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip"
            android:layout_marginBottom="40dip"
            android:gravity="center"
            android:textSize="20dip"
            android:textColor="#0b84aa"
            tools:ignore="SpUsage" />

        <TextView android:id="@+id/link_to_register"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip"
            android:layout_marginBottom="40dip"
            android:text="registrate!"
            android:gravity="center"
            android:textSize="20dip"
            android:textColor="#0b84aa"
            tools:ignore="HardcodedText,SpUsage" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>

